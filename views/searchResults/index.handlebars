<div class="d-flex flex-row bd-highlight justify-content-center">
    <div class="p-2 bd-highlight">
        <div class="input-group mb-3 mt-3">
            <input type="text" class="form-control" placeholder="Enter City" aria-label="Recipient's username"
                aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
        </div>
    </div>
    <div class="p-2 bd-highlight">
        <button type="button" class="btn btn-primary mb-3 mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            filters
        </button>
    </div>
</div>

<div class="search-main">
    <div class="content">
        <div id="res" class="d-flex flex-wrap justify-content-evenly">

            {{#each carData}}
                {{#each cars}}
                    <div class="card text-white bg-dark mb-3">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h3 class="card-title text-start">{{{brandName}}}</h3>
                            <span class="placeholder placeholder-xs col-12 bg-primary"></span>
                            <div class="d-flex justify-content-evenly">
                                <div class="card-text m-2">
                                    <h6>Details</h6>
                                    <span class="placeholder placeholder-xs col-12 bg-success"></span
                                    <p>Color: {{{color}}}</p>
                                    <p>Capacity: {{{capacity}}}</p>
                                    <p>Status: {{{status}}}</p>
                                    <p>Rate per Day: ${{{rate}}}</p>
                                </div>
                                <div class="card-text m-2">
                                    <h6 class="card-text">Contact</h6>
                                    <span class="placeholder placeholder-xs col-12 bg-success"></span
                                    <p>Owner: {{{../firstName}}} {{{../lastName}}}</p>
                                    <p>Phone: {{{../phoneNumber}}}</p>
                                    <p>email: {{{../email}}}</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <a href="/booking_a_car/{{_id}}" class="btn btn-primary float-end full-width atag">Book Me</a>
                            </div>
                            <span class="placeholder placeholder-xs col-12 bg-danger"></span>
                        </div>
                    </div>
                {{/each}}
            {{/each}}

        </div>
    </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="p-2 bd-highlight">
                    <div>
                        <label>From Date :
                            <input class="form-control form-control-lg" id="fromDate" name="fromDate" type="date"
                                placeholder="From Date" data-sb-validations="required,date" />
                        </label>
                    </div>
                </div>
                <div class="p-2 bd-highlight">
                    <label>To Date :
                        <input class="form-control form-control-lg" id="toDate" name="toDate" type="date"
                            placeholder="To Date" data-sb-validations="required,date" /></label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>