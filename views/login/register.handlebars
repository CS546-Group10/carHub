<h1>Registration page</h1>

<div>
    {{error}}
</div>

<form action="/login/signup" id="signup-form" method="POST">
    <label>Enter Username: </label>
    <input type="text" name="username" placeholder="Type username"><br>
    <label>Enter Password: </label>
    <input type="password" name="password" placeholder="Type password"><br>
    <label>Enter Age: </label>
    <input type="text" name="age" placeholder="Type age"><br>
    <label>Enter License Number: </label>
    <input type="text" name="license" placeholder="Type license number"><br>
    <label>Enter Address: </label>
    <input type="text" name="address" placeholder="Type address"><br>

    <input type="submit" value="Register" class btn-p>
</form>

<a href="/">Already have an account? Click here to log-in</a>