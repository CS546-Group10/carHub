
<div class="err">
    {{error}}
</div>
<link rel="stylesheet" href="/public/css/login.css">

    <div class="login-page">
      <div class="form">
        <div class="login">
          <div class="login-header">
            <h3>Profile Update page</h3>
          </div>
        </div>
            <form class="login-form" action="/updateProfile" id="signup-form" method="POST">
             <label>Enter Email: </label>
            <input type="text" name="email" placeholder="Type username" value={{response.email}} disabled><br>
            <label>Enter Password: </label>
            <input type="password" name="password" placeholder="Type password" value="{{response.password}}" disabled><br>
            <label>Enter First Name: </label>
            <input type="text" name="firstName" placeholder="Type first name" value="{{response.firstName}}" disabled><br>
            <label>Enter Last Name: </label>
            <input type="text" name="lastName" placeholder="Type last name" value="{{response.lastName}}" disabled><br>
            <label>Enter Age: </label>
            <input type="text" name="age" placeholder="Type age" value="{{response.age}}"><br>
            <label>Enter Phone Number: </label>
            <input type="text" name="phoneNumber" placeholder="Type phone number" value="{{response.phoneNumber}}"><br>
            <label>Enter House Number: </label>
            <input type="text" name="houseNumber" placeholder="Type house number" value="{{response.address.number}}"><br>
            <label>Enter Street: </label>
            <input type="text" name="street" placeholder="Type street" value="{{response.address.street}}"><br>
            <label>Enter City: </label>
            <input type="text" name="city" placeholder="Type city" value="{{response.address.city}}"><br>
            <label>Enter State: </label>
            <input type="text" name="state" placeholder="Type state" value="{{response.address.state}}"><br>
            <label>Enter Zip: </label>
            <input type="text" name="zip" placeholder="Type zip" value="{{response.address.zip}}"><br>
            <input type="submit" value="Update" class="btn-p">
        </form>
      </div>
    </div>