

{{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
        <li>
        {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}

    {{#if isMessage}}
    <ul class="message-list">
        {{#each messages}}
        <li>
        {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}

<link rel="stylesheet" href="/public/css/login.css">
    <div class="login-page">
      <div class="form">
        <div class="login">
          <div class="login-header">
            <h3>Ask Questions</h3>
          </div>
        </div>
            <form class="question-form" action="/askQuestions" id="question-form" method="POST">
            <label>Enter Question : </label>
            <input type="textarea" name="question" placeholder="Type Question"><br>
            <input type="submit" value="question" class="btn-p">
        </form>
      </div>
    </div>