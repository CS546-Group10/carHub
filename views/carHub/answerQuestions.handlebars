{{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
        <li>
        {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}

  {{#if isMessage}}
    <ul class="message-list">
        {{#each messages}}
        <li>
        {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}

<link rel="stylesheet" href="/public/css/login.css">
    <div class="login-page">
      <div class="form">
        <div class="login">
          <div class="login-header">
            <h3>Add Answers</h3>
          </div>
    {{#each questions}}
            <form class="question-form" method="POST" id="answer-form" name="answer-form" action="/answerQuestions/{{_id}}">
            <label>Question : </label>
            <input type="text" name="question" id="question_answerquestion" placeholder="Type Question" value={{question}} disabled><br>
            <label>Enter Answer : </label>
            <input type="text" name="answer" id="answer_answerquestion" placeholder="Type Answer"><br>
            <input type="submit" value="submit" class="btn-p">
        </form>
    {{/each}}
    </div>
    </div>
    </div>

    <div id="error_answerQuestions" class="alert alert-danger" role="alert"></div>


